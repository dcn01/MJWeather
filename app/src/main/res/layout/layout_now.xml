<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/itemBackground"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_tmp_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/txtColor_white"
        android:textSize="96sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_tmp_now"
        android:layout_alignTop="@id/tv_tmp_now"
        android:layout_marginTop="15dp"
        android:textColor="@color/txtColor_white"
        android:text="o"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/tv_txt_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/tv_tmp_now"
        android:layout_alignBottom="@id/tv_tmp_now"
        android:layout_marginBottom="15dp"
        android:textColor="@color/txtColor_white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_wind_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tmp_now"
        android:textColor="@color/txtColor_white"
        android:textSize="17sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>